@{
}

@model List<SchoolManagmentSystemRemake.Models.Teacher>


<script>
	function confirmDelete(event, Id) {
		event.preventDefault();
		if (confirm("Are you sure you want to delete this item?")) {
			window.location.href = '@Url.Action("Delete", "Teacher", new { Id = "Id" })'.replace("Id", Id)
		}
	}
</script>


<div>
	<div>
		<a class="btn btn-primary" asp-action="Create">Add a Teacher</a>
	</div>
	<div>
		<h2>Teachers List</h2>
		<table class="table">
			<thead>
				<tr>
					<th scope="col">#</th>
					<th scope="col">Name</th>
					<th scope="col">Major</th>
					<th scope="col">Price Per Hour</th>
					<th scope="col">Edit</th>
					<th scope="col">Delete</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var teacher in Model)
				{
					<tr>
						<th scope="row">1</th>
						<td>@teacher.TeacherName</td>
						<td>@teacher.Major</td>
						<td>@teacher.PricePerHour</td>
						<td>
							<a asp-action="Edit" asp-route-id="@teacher.Id" class="btn btn-info">Edit</a>
						</td>
						<td>
							<a onclick="confirmDelete(event) asp-action="Delete" asp-route-id="@teacher.Id" class="btn btn-danger">Delete</a>

						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>
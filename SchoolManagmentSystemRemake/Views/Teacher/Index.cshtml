@{
	string deleteType;
	if (ViewBag.Action == "Deleted")
		deleteType = "DeletePermanent";
	else
		deleteType = "Delete";
}

@model List<SchoolManagmentSystemRemake.Models.Teacher>


<div>
	<div>
		<a class="btn btn-primary" asp-action="Create">Add a Teacher</a>
		<a class="btn btn-warning" asp-action="RetrieveDeleted">View deleted Records</a>
	</div>
	<div>
		<h2>Teachers List</h2>
		<table class="table">
			<thead>
				<tr>
					<th scope="col">#</th>
					<th scope="col">Name</th>
					<th scope="col">Major</th>
					<th scope="col">Price Per Hour</th>
					<th scope="col">Edit</th>
					<th scope="col">Delete</th>
					<th scope="col" hidden="@((deleteType == "DeletePermanent") ? "true" : "false")">Restore</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var teacher in Model)
				{
					<tr>
						<th scope="row">@teacher.Id</th>
						<td>@teacher.TeacherName</td>
						<td>@teacher.Major</td>
						<td>@teacher.PricePerHour</td>
						<td>
							<a asp-action="Edit" asp-route-id="@teacher.Id" class="btn btn-info">Edit</a>
						</td>
						<td>
							<a asp-action="@deleteType" asp-route-id="@teacher.Id" class="btn btn-danger">Delete</a>
						</td>
						<td>
							<a asp-action="RestoreDeleted" hidden="@((teacher.IsDeleted) ? "true" : "false")" asp-route-id="@teacher.Id" class="btn btn-success">Restore</a>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>
@{
}
@model SchoolManagmentSystemRemake.ViewModels.vmTeacher

<div class="row justify-content-center">
	<div class="col-md-6">
		<div>
			<h2>@ViewBag.Action a Teacher</h2>
			<form method="post" asp-action="@ViewBag.Action">
				<div class="form-group">
					<label for="name">Name</label>
					<input type="text" class="form-control" id="name" asp-for="TeacherName" placeholder="Enter name">

					<label for="Major">Major</label>
					<select class="form-control" asp-for="MajorId" asp-items="@(new SelectList(ViewBag.Majors,"Id","MajorName"))">
						<option>
							---select---
						</option>
					</select>
					<label for="PricePerHour">Price Per Hour</label>
					<input type="text" class="form-control" id="PricePerHour" asp-for="PricePerHour" placeholder="Enter Price Per Hour">
					<label for="Courses">Courses</label>
					<select multiple class="form-control" asp-for="SelectedCourseIds"
							asp-items="@(new SelectList(ViewBag.Courses, "Id", "CourseName"))">
						<option>
							---select---
						</option>
					</select>
				</div>
				<br />
				<button type="submit" class="btn btn-primary">Submit</button>
			</form>
		</div>
	</div>
</div>
@model SchoolManagmentSystemRemake.ViewModels.vmTeacher

<head>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/SchoolManagmentSystemRemake.styles.css" asp-append-version="true" />
</head>

<div class="container mt-5" style="max-width: 600px;">
<div class="modal-header">
	<h5 class="modal-title">Assign Courses for @Model.TeacherName</h5>
	<button type="button" class="close" data-dismiss="modal">&times;</button>
</div>
<div class="modal-body">
	<form asp-action="AssignCourses" method="post">
		<input type="hidden" asp-for="Id" />
		@foreach (var course in ViewBag.Courses)
		{
			<div class="form-check">
				<input type="checkbox" class="form-check-input" name="SelectedCourseIds" value="@course.Id"
				@(Model.SelectedCourseIds.Contains(course.Id) ? "checked" : "") />
				<label class="form-check-label">@course.CourseName</label>
			</div>
		}
		<button type="submit" class="btn btn-primary mt-3">Save</button>
	</form>
</div>
</div>
<script>
	let assignUrl = '';
	function showAssignModal(url) {
		$('#modalContent').load(url, function () {
			$('#assignModal').modal('show');
		});
	}
</script>